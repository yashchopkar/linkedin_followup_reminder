{
  "manifest_version": 3,
  "name": "LinkedIn Follow-up Reminder",
  "version": "2.0",
  "description": "Automatically reminds you to follow up on LinkedIn messages after 3 days",
  "permissions": [
    "storage"
  ],
 "host_permissions": [
  "https://*.linkedin.com/*"
]
,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
        
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
